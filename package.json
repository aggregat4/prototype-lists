{
  "name": "prototype-lists",
  "version": "1.0.0",
  "scripts": {
    "start": "npx http-server . -p 8000 -c-1",
    "lint:deps": "knip",
    "test:unit": "node --test tests/unit/**/*.spec.mjs",
    "test": "npm run test:e2e",
    "test:e2e": "npx playwright test --project=chromium",
    "test:e2e:headed": "npx playwright test --project=chromium --headed",
    "test:e2e:firefox": "npx playwright test --project=firefox",
    "test:e2e:firefox:headed": "npx playwright test --project=firefox --headed"
  },
  "license": "Apache-2.0",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "1.56.0",
    "@types/node": "24.7.2",
    "http-server": "14.1.1",
    "knip": "5.70.2",
    "typescript": "5.9.3"
  }
}
